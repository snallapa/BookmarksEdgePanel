        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edge_row_favicon_1"
            android:layout_width="@dimen/edge_image_size"
            android:layout_height="@dimen/edge_image_size"
            android:layout_marginBottom="7dp"
            android:background="@drawable/edge_bookmark_border" />

        <TextView
            android:id="@+id/edge_row_uri_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxHeight="38dp"
            android:maxLines="2"
            android:textColor="@android:color/white"/>
    </LinearLayout>



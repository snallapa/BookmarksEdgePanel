<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/bookmark_item_icon"
        android:layout_width="@dimen/bookmark_item_size"
        android:layout_height="@dimen/bookmark_item_size"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bookmark_grid_border"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/bookmark_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookmark_item_icon"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxHeight="38dp"
        android:maxLines="1"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/bookmark_item_delete"
        android:layout_width="@dimen/bookmark_delete_icon"
        android:layout_height="@dimen/bookmark_delete_icon"
        android:background="@drawable/ic_cancel_24dp"
        android:layout_alignStart="@id/bookmark_item_icon"
        android:layout_alignTop="@id/bookmark_item_icon"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="-10dp"
        android:elevation="30dp"
        android:padding="8dp"
        android:visibility="gone"/>
</RelativeLayout>

